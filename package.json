{
  "name": "yada-11ty-blog",
  "version": "1.0.2",
  "license": "MIT",
  "description": "A starter repository for a blog web site using the Eleventy static site generator.",
  "scripts": {
    "build-ci": "npm run js-build && npx eleventy && npx sass scss:_site/css --watch",
    "build": "npm run clean && npm run build-ci",
    "watch": "concurrently \"npm run serve\" \"npm run js-build-watch\"",
    "serve": "npm run clean && npx eleventy --serve",
    "debug": "DEBUG=* eleventy && npm run test",
    "clean": "rm -Rf ./_site/*"
    "lint": "npm-run-all lint:*",
    "lint:fix": "npm-run-all --parallel lint:*:fix",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "lint:css:fix": "stylelint --fix \"src/**/*.scss\"",
    "lint:js": "eslint --cache \"**/*.js\"",
    "lint:js:fix": "eslint --cache --fix \"**/*.js\"",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs",
    "test:watch": "npm test --watch --silent=false --silent=false",
    "update-browserslist": "npx browserslist@latest --update-db",
  },
  "pre-push": [
    "build"
  ],
  "pre-commit": [],
  "repository": {
    "type": "git",
    "url": "git@github.com:denverprophitjr/yada-11ty-themes.git"
  },
  "bugs": {
    "url": "https://github.com/denverprophitjr/yada-11ty-themes/issues"
  },
  "homepage": "https://github.com/denverprophitjr/yada-11ty-themes#readme",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-img": "^2.0.0",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "eleventy-plugin-local-images": "^0.4.0",
    "fast-glob": "^3.2.7",
    "fast-memoize": "^2.5.2",
    "file-type": "^12.0.1",
    "fs-extra": "^8.1.0",
    "jsdom": "^15.1.1",
    "luxon": "^1.21.3",
    "markdown-it": "^13.0.1",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "^8.6.4",
    "markdown-it-attrs": "^4.1.4",
    "markdown-it-bracketed-spans": "^1.0.1",
    "markdown-it-container": "^3.0.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-plain-text": "^0.2.1",
    "node-fetch": "^3.2.3",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "purgecss": "^4.1.3",
    "shorthash": "0.0.2"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.4",
    "any-shell-escape": "^0.1.1",
    "bootstrap": "^5.1.3",
    "clean-css": "^5.2.4",
    "concurrently": "^7.0.0",
    "csso": "^5.0.3",
    "datauri": "^4.1.0",
    "expect.js": "^0.3.1",
    "ffmpeg-static": "^5.0.0",
    "hasha": "^5.2.0",
    "html-minifier": "^4.0.0",
    "image-size": "^1.0.1",
    "jquery": "^3.6.0",
    "lru-cache": "^7.1.1",
    "mocha": "^10.0.0",
    "phin": "^3.5.0",
    "popper.js": "^1.16.1",
    "purge-from-html": "^1.0.3",
    "querystring": "^0.2.0",
    "rollup": "^2.70.0",
    "rollup-plugin-terser": "^7.0.2",
    "sharp": "^0.30.0",
    "touch": "^3.1.0",
    "twitter": "^1.7.1"
  },
   "browserslist": [
    "last 2 chrome versions",
    "last 3 safari versions",
    "last 2 firefox versions",
    "last 2 edge versions"
  ],
  "lint-staged": {
    "*.js": "npm run lint:js:fix",
    "*.scss": "npm run lint:css:fix"
  }
}
